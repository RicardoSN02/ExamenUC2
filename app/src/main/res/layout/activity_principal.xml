<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="151dp"
        app:srcCompat="@drawable/grupo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/buttonDetalles"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="168dp" />

        <Button
            android:id="@+id/buttonGlobos"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Globos"
            android:layout_weight="2"
            />

        <Button
            android:id="@+id/buttonPeluches"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Peluches"
            android:layout_weight="3"
            />

        <Button
            android:id="@+id/buttonRegalos"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Regalos"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/buttonTazas"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Tazas"
            android:layout_weight="1"
            />

    </LinearLayout>




</LinearLayout>